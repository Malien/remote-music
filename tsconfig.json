{
    "compilerOptions": {
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "include": [
        "src/main.ts",
        "src/app/views/*.ts",
        "src/app/views/*.tsx"
    ]
}